      oldLen = oldLen + newLen
      lettercnt = oldLen
  
      if newLen > maxLen then
        maxLenIndex = i
        maxLen = newLen
      end
    end
    linecnt = maxLen + 1
    --print("maxLenIndex: " .. maxLenIndex, "maxLen: " .. maxLen, "linecnt: " .. linecnt)
