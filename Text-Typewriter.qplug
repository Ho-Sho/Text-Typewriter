        else
          ScrollTimer:Stop()
          Controls.StartLetter.Boolean = false
          Controls.DisplayLupan.IsInvisible = true
          Controls.DisplayScrollTextLetter.IsInvisible = false
        end
      end
    end
    if delay ~= nil then
      ScrollTimer:Start(delay)
    end
  end
  
